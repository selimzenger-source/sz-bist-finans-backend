# ====================================================
# BIST Finans Backend — Environment Variables
# ====================================================
# Bu dosyayi .env olarak kopyalayip doldurun.
# Render'da: Dashboard > Environment > Environment Variables

# PostgreSQL (Render otomatik atar)
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/bist_finans

# Uygulama ortami
APP_ENV=development        # production | development
SECRET_KEY=change-this-to-a-random-secret

# CORS — mobil uygulamadan gelen istekler icin
CORS_ORIGINS=*

# Firebase Cloud Messaging (push bildirim)
GOOGLE_APPLICATION_CREDENTIALS=firebase-service-account.json

# Admin Paneli sifresi
ADMIN_PASSWORD=change-this-password

# Scraping araliklari (saniye)
KAP_SCRAPE_INTERVAL_SECONDS=1800   # 30 dakika
NEWS_SCRAPE_INTERVAL_SECONDS=30    # 30 saniye
